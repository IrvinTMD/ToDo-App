<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Editing Item</div>
        <form class="ui form" action="/todos/<%= todo._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Thing</label>
                <input type="text" name="todo[thing]" value="<%= todo.thing %>">
            </div>
            <div class="field">
                <label>Completed?</label>
                <input type="text" name="todo[done]" value="<%= todo.done %>">
            </div>
            <input class="ui violet big basic button" type="submit">
        </form>
        <form action="/todos/<%= todo._id %>?_method=DELETE" method="POST">
            <button class="ui red basic button">Delete</button>
        </form>
</div>


<% include partials/footer %>
